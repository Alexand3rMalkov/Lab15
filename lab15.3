#define _CRT_SECURE_NO_DEPRECATE
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
#define M 10
#define N 20

int main() {
	int sum= 0;
	int sredarif = 0;
	int array[N][M];
	setlocale(LC_ALL, "rus");
	for (int i = 0; i < N; i++) {
		for (int j = 0; j < M; j++) {
			array[i][j] = rand() % 10;
		}

	}
	for (int i = 0; i < N; i++) {
		printf("\n");
		for (int j = 0; j < M; j++) {
			printf("%d\t", array[i][j]);
		}
		printf("\n");
	}
	for (int i = 1; i < N; i++) {
		for (int j = 1; j < M; j++) {
			if (array[i][j] > 0) {
				sum += array[i][j];
				sredarif += 1;
			}
			sum /= sredarif;
		}

	}
	printf("Средняя оценка по класу в целом: %d", sum);
}
